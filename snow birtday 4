<!-- ===================== FIREBASE + LOGIC ===================== -->
<script type="module">
/* ===== Firebase imports ===== */
import { initializeApp } from "https://www.gstatic.com/firebasejs/12.8.0/firebase-app.js";
import {
  getFirestore,
  collection,
  addDoc,
  onSnapshot,
  query,
  orderBy
} from "https://www.gstatic.com/firebasejs/12.8.0/firebase-firestore.js";

/* ===== Firebase config (FIXED) ===== */
const firebaseConfig = {
  apiKey: "AIzaSyDXMZFiyUy5clth9qfm13wNbL9EOS61t2Y",
  authDomain: "snow-birthday-2.firebaseapp.com",
  projectId: "snow-birthday-2",
  storageBucket: "snow-birthday-2.appspot.com",
  messagingSenderId: "1037215535742",
  appId: "1:1037215535742:web:048763960f091dbdcc7e2f"
};

const app = initializeApp(firebaseConfig);
const db = getFirestore(app);

/* ===== Page control ===== */
window.startCelebration = function () {
  document.getElementById("intro").classList.add("hidden");
  document.getElementById("main").classList.remove("hidden");
};

/* ===== Wishes backend ===== */
window.addWish = async function () {
  const input = document.getElementById("wish-input");
  const text = input.value.trim();
  if (!text) return;

  await addDoc(collection(db, "wishes"), {
    text,
    time: Date.now()
  });

  input.value = "";
};

const wishQuery = query(
  collection(db, "wishes"),
  orderBy("time", "desc")
);

onSnapshot(wishQuery, snapshot => {
  const list = document.getElementById("wish-list");
  list.innerHTML = "";
  snapshot.forEach(doc => {
    const div = document.createElement("div");
    div.className = "wish-card";
    div.textContent = "‚ú® " + doc.data().text;
    list.appendChild(div);
  });
});

/* ===== Rating backend ===== */
window.rate = async function (stars) {
  document.querySelectorAll(".star").forEach((s, i) =>
    s.classList.toggle("active", i < stars)
  );

  document.getElementById("rating-text").textContent =
    `Rated ${stars}/5 üíñ`;

  await addDoc(collection(db, "ratings"), {
    stars,
    time: Date.now()
  });
};
</script>

